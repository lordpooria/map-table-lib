{
  "extends": "../tsconfig.json",
  "exclude": [
    "node_modules",
    "tests"
  ],
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "declarationDir": "./typings",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
